{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "args": ["${workspaceFolder}/src/main.ts"],
        "runtimeArgs": [
          "--nolazy",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "preLaunchTask": "start"  // Comando para iniciar el app en modo debug
      }
    ]
  }
  